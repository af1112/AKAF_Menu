@echo off
set /p COMMIT_MSG=لطفاً پیام کامیت را وارد کنید:

echo ----------------------------------------
echo افزودن تمام تغییرات به گیت...
git add .

echo ----------------------------------------
echo ساخت کامیت با پیام: %COMMIT_MSG%
git commit -m "%COMMIT_MSG%"

echo ----------------------------------------
echo پوش به ریپوی گیت‌هاب...
git push origin master

echo ----------------------------------------
echo تمام شد! تغییرات به GitHub فرستاده شدند.
pause
